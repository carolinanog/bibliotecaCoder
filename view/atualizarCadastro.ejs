<!DOCTYPE html>
<html lang="pt-br">
    <%- include('preDefinicao.ejs') %>
<body>
    <%- include('navegacao.ejs') %>
    
    <section class="container">

        <h1>Atualizar Cadastro</h1>
        <h4>Preencha com seus dados</h4>

            <form action="/atualizardadosdousuario/atualizar" method="POST">
                        
                <label for="CPF">CPF: </label>
                <input type="text" id="CPF" name="CPF" required>
                <br>
                <button type="submit"> Enviar </button>
            
            </form>

            <form action="/atualizardadosdousuario/atualizar/<%=row.CPF%>" method="POST">
                <label for="CPF">CPF: </label>
                <input type="text" id="CPF" name="CPF" value="<%=row.CPF%>" disabled required>
                <br>
                <label for="Nome">Nome: </label>
                <input type="text" id="Nome" name="nome" value="<%=row.nome%>" required>
                <br>
                <label for="Telefone">Telefone: </label>
                <input type="text" id="Telefone" name="telefone" value="<%=row.telefone%>" required>
                <br>
                <label for="Email">Email: </label>
                <input type="email" id="Email" name="email" value="<%=row.email%>" required>
                <br>
                <button type="submit"> Enviar </button>
            
            </form>

            <%if (mensagem) %> <p><%=mensagem%></p>
    </section>

    <%- include('rodape.ejs') %>    

    </body>
</html>